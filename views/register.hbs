<div class="content__register">

    {{#if errors}}
    <div class="errorHandlindAuth">
        {{#each errors}}
        <p>{{this}}</p>
        {{/each}}
    </div>
    {{/if}}

    <form action="#" method="post">
        <p class="heading">Register</p>
        <div class="box">
            <p>Email</p>
            <div> <input type="text" placeholder="Enter your email" name="email" value="{{body.email}}"> </div>
        </div>
        <div class="box">
            <p>Username</p>
            <div> <input type="text" placeholder="Enter your username" name="username" value="{{body.username}}"> </div>
        </div>
        <div class="box">
            <p>Password</p>
            <div> <input type="password" placeholder="Enter your password" name="password"> </div>
        </div>
        <div class="box">
            <p>Repeat Password</p>
            <div> <input type="password" placeholder="Repeat password" name="repass"> </div>
        </div>
        <button class="registerBtn">Register</button>
        <p class="text">Don't have an account? <a href="/auth/login">Sign in</a></p>
    </form>

</div>